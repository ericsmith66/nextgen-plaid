# .gitignore for NextGen Plaid (Rails 8 + Plaid)
# See https://shopify.github.io/gitignore/

# Environment files
.env
.env.local
.env.*.local
.env.*.example

# Rails credentials
config/credentials.yml.enc
config/master.key

# Logs
log/*
!log/.keep
*.log

# Temp files
tmp/*
!tmp/.keep
tmp/pids/*
tmp/sockets/*

# Database
*.sqlite3
*.sqlite3-journal
db/*.sqlite3

# Coverage
coverage/

# OS files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Editor files
.idea/
.vscode/
*.swp
*.swo
*~

# Bundler
.bundle
vendor/bundle

# Rails storage
storage/*
!storage/.keep

# Ignore Plaid test tokens (if any)
*.sandbox_token

# Ignore any local Plaid development files
plaid_dev/*
/app/assets/builds/*
!/app/assets/builds/.keep
