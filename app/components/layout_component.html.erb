<div class="min-h-screen bg-gray-50">
  <%= render NavigationComponent.new(current_user: @current_user) %>
  
  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <% if @title.present? %>
      <header class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900"><%= @title %></h1>
      </header>
    <% end %>
    
    <%= content %>
  </main>
</div>
