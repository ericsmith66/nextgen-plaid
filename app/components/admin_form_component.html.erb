<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <%= form_with(model: [:admin, @model], url: @url, method: @method, local: true) do |f| %>
      <% if @model.errors.any? %>
        <div class="alert alert-error">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <div>
            <h3 class="font-bold">
              <%= pluralize(@model.errors.count, "error") %> prohibited this <%= @model.class.name.downcase %> from being saved:
            </h3>
            <ul class="list-disc list-inside text-sm">
              <% @model.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <% if @model.is_a?(User) %>
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <%= f.email_field :email, class: "input input-bordered w-full", placeholder: "user@example.com" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Password</span>
          </label>
          <%= f.password_field :password, class: "input input-bordered w-full", placeholder: @model.new_record? ? "Enter password" : "Leave blank to keep current" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Password Confirmation</span>
          </label>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full", placeholder: "Confirm password" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Role</span>
          </label>
          <%= f.select :roles, 
              [["Admin", "admin"], ["Parent", "parent"], ["Kid", "kid"]],
              {},
              class: "select select-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Family ID</span>
          </label>
          <%= f.text_field :family_id, class: "input input-bordered w-full", placeholder: "family_001" %>
        </div>
      <% elsif @model.is_a?(Account) %>
        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Name</span>
          </label>
          <%= f.text_field :name, class: "input input-bordered w-full", placeholder: "Account name" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Type</span>
          </label>
          <%= f.text_field :type, class: "input input-bordered w-full", placeholder: "depository" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Subtype</span>
          </label>
          <%= f.text_field :subtype, class: "input input-bordered w-full", placeholder: "checking" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Mask</span>
          </label>
          <%= f.text_field :mask, class: "input input-bordered w-full", placeholder: "1234" %>
        </div>

        <div class="form-control w-full">
          <label class="label">
            <span class="label-text">Current Balance</span>
          </label>
          <%= f.number_field :current_balance, step: 0.01, class: "input input-bordered w-full", placeholder: "0.00" %>
        </div>
      <% end %>

      <div class="card-actions justify-end mt-6">
        <%= link_to "Cancel", :back, class: "btn btn-ghost" %>
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
