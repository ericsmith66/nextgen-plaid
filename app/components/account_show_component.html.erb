<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="border-b pb-4 mb-4">
    <h2 class="text-2xl font-bold text-gray-900"><%= @account.name %></h2>
    <p class="text-gray-600 mt-1"><%= @account.type %> - <%= @account.subtype %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium text-gray-500">Account ID</label>
        <p class="text-gray-900"><%= @account.account_id %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Mask</label>
        <p class="text-gray-900"><%= @account.mask || "N/A" %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Available Balance</label>
        <p class="text-gray-900 text-lg font-semibold">
          <%= @account.available ? "$#{number_to_currency(@account.available, precision: 2, unit: '')}" : "N/A" %>
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Current Balance</label>
        <p class="text-gray-900 text-lg font-semibold">
          <%= @account.current ? "$#{number_to_currency(@account.current, precision: 2, unit: '')}" : "N/A" %>
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Credit Limit</label>
        <p class="text-gray-900">
          <%= @account.limit ? "$#{number_to_currency(@account.limit, precision: 2, unit: '')}" : "N/A" %>
        </p>
      </div>
    </div>

    <div class="space-y-3">
      <% if @account.apr_percentage.present? %>
        <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
          <h3 class="text-sm font-semibold text-gray-900 mb-3">Liability Information</h3>
          
          <div class="space-y-2">
            <div>
              <label class="block text-xs font-medium text-gray-500">APR Percentage</label>
              <p class="text-gray-900 font-semibold"><%= @account.apr_percentage %>%</p>
            </div>

            <% if @account.min_payment_amount.present? %>
              <div>
                <label class="block text-xs font-medium text-gray-500">Minimum Payment</label>
                <p class="text-gray-900">$<%= number_to_currency(@account.min_payment_amount, precision: 2, unit: "") %></p>
              </div>
            <% end %>

            <% if @account.next_payment_due_date.present? %>
              <div>
                <label class="block text-xs font-medium text-gray-500">Next Payment Due</label>
                <p class="text-gray-900"><%= @account.next_payment_due_date.strftime("%B %d, %Y") %></p>
              </div>
            <% end %>

            <% if @account.is_overdue %>
              <div class="mt-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Overdue
                </span>
              </div>
            <% end %>

            <% if @account.debt_risk_flag %>
              <div class="mt-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                  High Debt Risk
                </span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if @account.diversification_risk? %>
        <div class="bg-red-50 p-4 rounded-lg border border-red-200">
          <h3 class="text-sm font-semibold text-red-900 mb-2">⚠️ Diversification Risk</h3>
          <p class="text-xs text-red-700">One or more sectors exceed 30% concentration</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6 pt-4 border-t">
    <label class="block text-sm font-medium text-gray-500 mb-2">Holdings Summary</label>
    <div class="flex gap-4">
      <div>
        <p class="text-xs text-gray-500">Total Holdings</p>
        <p class="text-lg font-semibold text-gray-900"><%= @account.holdings.count %></p>
      </div>
      <div>
        <p class="text-xs text-gray-500">Total Transactions</p>
        <p class="text-lg font-semibold text-gray-900"><%= @account.transactions.count %></p>
      </div>
    </div>
  </div>
</div>
