<div class="overflow-x-auto">
  <table class="table-auto border-collapse w-full bg-white shadow-md rounded-lg">
    <thead>
      <tr class="bg-gray-100 border-b">
        <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Name</th>
        <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Type</th>
        <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Subtype</th>
        <th class="px-4 py-3 text-right text-sm font-semibold text-gray-700">Current Balance</th>
        <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="px-4 py-3 text-sm text-gray-900 font-medium"><%= account.name %></td>
          <td class="px-4 py-3 text-sm text-gray-900"><%= account.type %></td>
          <td class="px-4 py-3 text-sm text-gray-900"><%= account.subtype %></td>
          <td class="px-4 py-3 text-sm text-right text-gray-900">
            <%= account.current_balance ? "$#{number_to_currency(account.current_balance, precision: 2, unit: '')}" : "N/A" %>
          </td>
          <td class="px-4 py-3 text-sm text-center">
            <%= link_to "View", account_path(account), class: "text-blue-600 hover:text-blue-800 font-medium" %>
          </td>
        </tr>
      <% end %>
      <% if @accounts.empty? %>
        <tr>
          <td colspan="5" class="px-4 py-8 text-center text-gray-500">No accounts found</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
