<nav class="bg-white shadow-lg border-b border-gray-200">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "text-2xl font-bold text-primary-600 hover:text-primary-700" do %>
          NextGen Wealth
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:space-x-8 items-center">
        <% if authenticated? %>
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Holdings", holdings_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Transactions", transactions_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Accounts", accounts_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          
          <% if admin? || owner? %>
            <%= link_to "Mission Control", mission_control_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
            <%= link_to "Admin", admin_users_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          <% end %>

          <div class="flex items-center space-x-4 ml-4 pl-4 border-l border-gray-300">
            <span class="text-sm text-gray-600"><%= @current_user.email %></span>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "text-gray-700 hover:text-red-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "bg-primary-600 hover:bg-primary-700 text-white px-4 py-2 rounded-md text-sm font-medium transition" %>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button type="button" 
                onclick="toggleMobileMenu()"
                class="text-gray-700 hover:text-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-md p-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (Hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <% if authenticated? %>
        <%= link_to "Dashboard", dashboard_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        <%= link_to "Holdings", holdings_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        <%= link_to "Transactions", transactions_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        <%= link_to "Accounts", accounts_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        
        <% if admin? || owner? %>
          <%= link_to "Mission Control", mission_control_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
          <%= link_to "Admin", admin_users_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        <% end %>

        <div class="border-t border-gray-200 mt-2 pt-2">
          <div class="px-3 py-2 text-sm text-gray-600"><%= @current_user.email %></div>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block w-full text-left text-gray-700 hover:bg-gray-100 hover:text-red-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        </div>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "block text-gray-700 hover:bg-gray-100 hover:text-primary-600 px-3 py-2 rounded-md text-base font-medium transition" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "block bg-primary-600 hover:bg-primary-700 text-white px-3 py-2 rounded-md text-base font-medium transition text-center" %>
      <% end %>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  }
</script>
