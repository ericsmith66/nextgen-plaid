<div class="bg-white p-6 rounded-lg shadow-md">
  <div class="border-b pb-4 mb-4">
    <h2 class="text-2xl font-bold text-gray-900"><%= @holding.name %></h2>
    <p class="text-gray-600 mt-1"><%= @holding.ticker_symbol %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium text-gray-500">Security ID</label>
        <p class="text-gray-900"><%= @holding.security_id %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Quantity</label>
        <p class="text-gray-900"><%= @holding.quantity_s %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Market Value</label>
        <p class="text-gray-900 text-lg font-semibold">$<%= number_to_currency(@holding.market_value || 0, precision: 2, unit: "") %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Cost Basis</label>
        <p class="text-gray-900">$<%= number_to_currency(@holding.cost_basis || 0, precision: 2, unit: "") %></p>
      </div>
    </div>

    <div class="space-y-3">
      <div>
        <label class="block text-sm font-medium text-gray-500">Vested Value</label>
        <p class="text-gray-900">$<%= number_to_currency(@holding.vested_value || 0, precision: 2, unit: "") %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Institution Price</label>
        <p class="text-gray-900">$<%= number_to_currency(@holding.institution_price || 0, precision: 2, unit: "") %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Sector</label>
        <p class="text-gray-900"><%= @holding.sector || "N/A" %></p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-500">Type</label>
        <p class="text-gray-900"><%= @holding.type || "N/A" %></p>
      </div>
    </div>
  </div>

  <div class="mt-6 pt-4 border-t">
    <label class="block text-sm font-medium text-gray-500">Account</label>
    <p class="text-gray-900"><%= @holding.account.name if @holding.account %></p>
  </div>
</div>
