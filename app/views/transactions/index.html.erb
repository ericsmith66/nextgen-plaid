<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Transactions</h1>
    <%= link_to "New Transaction", new_transaction_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
  </div>

  <div class="mb-6 bg-white p-4 rounded-lg shadow-md">
    <%= form_with url: transactions_path, method: :get, local: true, class: "flex gap-3 items-end" do |f| %>
      <div class="flex-1">
        <label class="block text-sm font-medium text-gray-700 mb-2">Filter by Subtype</label>
        <%= f.select :subtype, 
            options_for_select([
              ["All Subtypes", ""],
              ["Deposit", "deposit"],
              ["Withdrawal", "withdrawal"],
              ["Transfer", "transfer"],
              ["Payment", "payment"],
              ["Purchase", "purchase"]
            ], params[:subtype]), 
            {}, 
            class: "w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <%= f.submit "Filter", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded cursor-pointer" %>
      </div>
      <% if params[:subtype].present? %>
        <div>
          <%= link_to "Clear", transactions_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-medium py-2 px-6 rounded" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= render TransactionTableComponent.new(transactions: @transactions) %>

  <div class="mt-6 flex justify-center">
    <%= paginate @transactions %>
  </div>
</div>
