<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Accounts Management</h1>
    <%= link_to "New Account", new_admin_account_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
  </div>

  <%= render AdminTableComponent.new(items: @accounts, columns: [:name, :type, :subtype, :current_balance], model_name: "Account") %>

  <div class="mt-6 flex justify-center">
    <%= paginate @accounts %>
  </div>
</div>
